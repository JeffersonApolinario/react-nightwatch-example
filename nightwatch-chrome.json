{
    "src_folders" : ["e2e/tests"],
    "page_objects_path": "e2e/pages",

    "screenshots" : {
      "enabled" : true,
      "on_failure" : true,
      "on_error" : false,
      "path" : "/e2e/screenshots"
    },

    "webdriver" : {
      "start_process": true,
      "server_path": "node_modules/.bin/chromedriver",
      "port": 9515
    },

    "test_settings" : {
      "default" : {
        "launch_url" : "http://localhost:3000",
        "desiredCapabilities": {
          "browserName": "chrome"
        }
      },

      "chrome-headless": {
        "launch_url" : "http://localhost:3000",
        "desiredCapabilities": {
          "browserName": "chrome",
          "chromeOptions": {
            "args": [
                "--headless",
                "--no-sandbox",
                "--disable-gpu",
                "--disable-dev-shm-usage"
            ]
          }
        }
      }
    }
  }